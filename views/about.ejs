    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>VirtuConnect - About Us</title>
        <link rel="stylesheet" href="styles.css" />
        <script>
            let currentMemberIndex = 0;

            function showMember(index) {
                const members = document.querySelectorAll(".team-member");
                if (index >= members.length) {
                    currentMemberIndex = 0;
                } else if (index < 0) {
                    currentMemberIndex = members.length - 1;
                } else {
                    currentMemberIndex = index;
                }
                members.forEach((member, i) => {
                    member.classList.remove("active");
                    member.style.display =
                        i === currentMemberIndex ? "block" : "none";
                });
                members[currentMemberIndex].classList.add("active");
            }

            document.addEventListener("DOMContentLoaded", () => {
                showMember(currentMemberIndex);
                document
                    .querySelector(".nav-button.prev")
                    .addEventListener("click", () =>
                        showMember(currentMemberIndex - 1)
                    );
                document
                    .querySelector(".nav-button.next")
                    .addEventListener("click", () =>
                        showMember(currentMemberIndex + 1)
                    );
            });
        </script>
    </head>
